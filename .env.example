# Database Configuration
# Replace with your actual Supabase PostgreSQL connection string
DATABASE_URL=postgresql://user:password@host:port/database

# Example format:
# DATABASE_URL=postgresql://postgres.xxxxx:password@aws-0-us-east-1.pooler.supabase.com:5432/postgres

# Supabase Project Details
SUPABASE_URL=https://your-project-id.supabase.co
DB_PASSWORD=your-database-password

# JWT Configuration
# IMPORTANT: Change JWT_SECRET_KEY in production!
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRES=3600

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True

# CORS Configuration (comma-separated list of allowed origins)
# Add your frontend URL when deploying
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
